<!doctype html>
<html>
<head>
    <title>Author Settings Page</title>
    <!-- Adding Bootstrap CSS link -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Adding CSS hstyling */
        body {
            padding: 15px;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #f8f5f5;
            border-radius: 4px;
            box-shadow: 0 0 10px rgba(39, 39, 39, 0.1);
        }
        .form-group label {
            font-weight: bold;
        }
        .form-group input {
            width: 100%;
            padding: 6px;
            border: 1px solid #d0c9c9;
        }
        .form-group button {
            margin-top: 10px;
            padding: 8px 20px;
            background-color: #469cf8;
            color: #ede8e8;
            border-radius: 3px;
            cursor: pointer;
        }
        .form-group button:hover {
            background-color: #407ab9;
        }
        .back-link {
            display: inline-block;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Author Settings Page</h1>
        <h3>You can edit your name, the title of your blog, and blog subtitle.</h3>
        <!-- creating input boes for author to edit blog title, subtitle and author name -->
        <form action="/user/author/settings/<%= author.id %>" method="POST" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="blogTitle">Blog Title:</label>
                <input id="blogTitle" type="text" name="blogTitle" value="<%= author.blogTitle %>" required>
            </div>
            <div class="form-group">
                <label for="blogSubtitle">Subtitle:</label>
                <input id="blogSubtitle" type="text" name="blogSubtitle" value="<%= author.blogSubtitle %>" required>
            </div>
            <div class="form-group">
                <label for="authorName">Author Name:</label>
                <input id="authorName" type="text" name="authorName" value="<%= author.authorName %>" required>
            </div>
            <button type="submit">Save</button>
        </form>

        <a class="back-link" href="/user/author/home_page">Back to author home page</a>
    </div>

    <!-- Adding Bootstrap JS and jQuery scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function validateForm() {
            var blogTitle = document.getElementById('blogTitle').value;
            var blogSubtitle = document.getElementById('blogSubtitle').value;
            var authorName = document.getElementById('authorName').value;

            if (blogTitle.trim() === '' || blogSubtitle.trim() === '' || authorName.trim() === '') {
                alert('Please fill in all fields');
                return false; //no form submission fields are empty
            }
            return true; //allow form submission
        }
    </script>
</body>
</html>



